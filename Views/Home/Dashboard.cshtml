                    <img src="/flags/vietnam.png" class="w-5 h-5"> Vietnam
                </li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const btn = document.getElementById("dropdownBtn");
        const menu = document.getElementById("dropdownMenu");

        btn.onclick = () => menu.classList.toggle("hidden");

        document.querySelectorAll("#dropdownMenu li").forEach(item =>
        {
            item.onclick = () =>
            {
                document.getElementById("dropdownImg").src = item.dataset.img;
                document.getElementById("dropdownLabel").textContent = item.textContent.trim();
                menu.classList.add("hidden");
            };
        });
    </script>
}