@{
    ViewData["Title"] = "Dashboard";
}
<section class="grid grid-cols-1 lg:grid-cols-3 gap-6 w-full">
    <!-- stat card -->
    <div class="bg-white rounded-xl shadow p-5">
        <div class="flex items-center gap-4">
            <div class="bg-indigo-50 p-3 rounded-lg">
                <i class="fas fa-users text-indigo-600 text-2xl"></i>
            </div>
            <div>
                <p class="text-sm text-slate-500">Total Users</p>
                <h3 class="text-2xl font-bold">1,234</h3>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow p-5">
        <div class="flex items-center gap-4">
            <div class="bg-emerald-50 p-3 rounded-lg">
                <i class="fas fa-shopping-cart text-emerald-600 text-2xl"></i>
            </div>
            <div>
                <p class="text-sm text-slate-500">Orders</p>
                <h3 class="text-2xl font-bold">567</h3>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow p-5">
        <div class="flex items-center gap-4">
            <div class="bg-amber-50 p-3 rounded-lg">
                <i class="fas fa-chart-line text-amber-600 text-2xl"></i>
            </div>
            <div>
                <p class="text-sm text-slate-500">Revenue</p>
                <h3 class="text-2xl font-bold">$12,345</h3>
            </div>
        </div>
    </div>
</section>

<section class="mt-6">
    <div class="bg-white rounded-xl shadow">
        <div class="px-5 py-4 border-b border-slate-100">
            <h2 class="text-lg font-semibold">Recent Orders</h2>
        </div>
        <div class="p-4 overflow-x-auto">
            <table class="w-full text-sm table-auto">
                <thead class="bg-slate-50 text-slate-600">
                    <tr>
                        <th class="text-left px-4 py-2">Order</th>
                        <th class="text-left px-4 py-2">Customer</th>
                        <th class="text-left px-4 py-2">Status</th>
                        <th class="text-left px-4 py-2">Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="border-b">
                        <td class="px-4 py-3">#1234</td>
                        <td class="px-4 py-3">John Doe</td>
                        <td class="px-4 py-3"><span
                                class="inline-block px-3 py-1 rounded-full bg-emerald-100 text-emerald-800 text-xs">Shipped</span>
                        </td>
                        <td class="px-4 py-3">$99.00</td>
                    </tr>
                    <!-- more rows -->
                </tbody>
            </table>
        </div>
    </div>
</section>

