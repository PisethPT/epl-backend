@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>404 Access Denied</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        :root {
            --brand-50: #f8f7fb;
            --brand-500: #6b21a8;
            /* purple-700 */
            --brand-600: #5b189b;
            --bg: #0b0710;
            --card: #0f0b14;
        }

        .glass {
            background: linear-gradient(180deg, rgba(255, 255, 255, 0.02), rgba(255, 255, 255, 0.01));
            backdrop-filter: blur(6px);
        }
    </style>
</head>

<body class="min-h-screen bg-gradient-to-b from-gray-900 via-[#08030a] to-[#0b0710] text-gray-100 antialiased">
    <div class="max-w-6xl mx-auto px-6 py-16">
        <header class="flex items-center justify-between mb-8">
            <div class="flex items-center gap-3">
                <div
                    class="w-10 h-10 rounded-lg bg-gradient-to-br from-[#5b189b] to-[#8b5cf6] flex items-center justify-center shadow-lg">
                    <!-- small brand / shield icon -->
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden>
                        <path d="M12 2L3 6v5c0 6 5 11 9 11s9-5 9-11V6l-9-4z" fill="white" opacity="0.95"></path>
                    </svg>
                </div>
                <div>
                    <h1 class="text-lg font-semibold">Premier League 2026</h1>
                    <p class="text-sm text-gray-400 mt-0.5">Secure area</p>
                </div>
            </div>
            <nav class="text-sm text-gray-400 hidden md:flex gap-4">
                <a href="/home" class="hover:text-white">Home</a>
                <a href="/admin" class="hover:text-white">Admin</a>
                <a href="/auth/access-denied" class="text-white font-medium">Access Denied</a>
            </nav>
        </header>

        <main class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
            <!-- left: message card -->
            <section class="glass p-8 rounded-2xl shadow-2xl border border-white/5">
                <div class="flex items-start gap-6">
                    <div class="flex-shrink-0">
                        <div
                            class="w-20 h-20 rounded-xl bg-gradient-to-br from-[#3b0d5a] to-[#6b21a8] flex items-center justify-center shadow-lg">
                            <!-- lock icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10" fill="none" viewBox="0 0 24 24"
                                stroke="white" aria-hidden>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                    d="M12 11c.828 0 1.5.672 1.5 1.5V15a1.5 1.5 0 01-3 0v-2.5C10.5 11.672 11.172 11 12 11z">
                                </path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                    d="M7 11V9a5 5 0 0110 0v2"></path>
                                <rect x="5" y="11" width="14" height="8" rx="2" stroke="white" stroke-width="1.2">
                                </rect>
                            </svg>
                        </div>
                    </div>

                    <div class="flex-1">
                        <h2 class="text-3xl font-extrabold leading-tight">Access denied</h2>
                        <p class="mt-3 text-gray-300 max-w-prose">You don’t have permission to view this page or perform
                            the requested action. If you believe this is an error, contact your administrator or request
                            access.</p>

                        <div class="mt-6 flex flex-wrap gap-3">
                            <a href="javascript:history.back()"
                                class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-white/6 hover:bg-white/10 border border-white/6 text-sm font-medium">
                                <!-- back arrow -->
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor" aria-hidden>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M15 19l-7-7 7-7" />
                                </svg>
                                Go back
                            </a>

                            <a href="/"
                                class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-gradient-to-br from-[#6b21a8] to-[#8b5cf6] text-sm font-semibold shadow-md hover:opacity-95">
                                Dashboard
                            </a>

                            <a href="/support"
                                class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-dashed border-white/5 text-sm text-gray-300 hover:bg-white/2">
                                Contact admin
                            </a>
                        </div>

                        <div class="mt-5 text-xs text-gray-500">Error code: <span
                                class="font-mono text-sm text-gray-300">403</span></div>

                        <div class="mt-6 text-sm text-gray-400">
                            <details class="bg-white/3 p-3 rounded-md">
                                <summary class="cursor-pointer">Why am I seeing this?</summary>
                                <p class="mt-2 text-sm text-gray-300">Your account lacks the role or permission required
                                    to access this resource. Roles and permissions are centrally managed; changes may
                                    take a few minutes to propagate.</p>
                            </details>
                        </div>
                    </div>
                </div>
            </section>

            <!-- right: helpful panel / quick actions -->
            <aside class="space-y-6">
                <div
                    class="p-6 rounded-2xl bg-gradient-to-b from-[#06040a] to-[#0b0710] border border-white/3 shadow-lg">
                    <h3 class="text-lg font-semibold">Quick actions</h3>
                    <p class="text-sm text-gray-400 mt-2">Things you can try to regain access.</p>

                    <ul class="mt-4 space-y-3">
                        <li class="flex items-start gap-3">
                            <div class="mt-1">
                                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                        d="M12 11V7"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                        d="M12 21a9 9 0 100-18 9 9 0 000 18z"></path>
                                </svg>
                            </div>
                            <div>
                                <div class="text-sm font-medium">Sign out and sign in</div>
                                <div class="text-xs text-gray-400">A fresh session may pick up updated permissions.
                                </div>
                            </div>
                        </li>

                        <li class="flex items-start gap-3">
                            <div class="mt-1">
                                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                        d="M12 8v4l3 3"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                        d="M21 12A9 9 0 113 12a9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <div>
                                <div class="text-sm font-medium">Request access</div>
                                <div class="text-xs text-gray-400">Send a request to the team that manages roles and
                                    permissions.</div>
                            </div>
                        </li>

                        <li class="flex items-start gap-3">
                            <div class="mt-1">
                                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 7h18">
                                    </path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                        d="M3 12h18"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                        d="M3 17h18"></path>
                                </svg>
                            </div>
                            <div>
                                <div class="text-sm font-medium">Check audit logs</div>
                                <div class="text-xs text-gray-400">If you have access, see why the request was denied.
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>

                <div class="p-6 rounded-2xl bg-gradient-to-br from-[#0b0710] to-[#0f0b14] border border-white/4">
                    <h4 class="text-sm font-semibold">Suggested contact</h4>
                    <div class="mt-3 flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center">A</div>
                        <div class="flex-1">
                            <div class="text-sm font-medium">Admin Support</div>
                            <a href="mailto:admin@example.com" class="text-xs text-gray-400">admin@example.com</a>
                        </div>
                        <a href="/support" class="text-xs font-medium px-3 py-1 rounded-lg bg-white/6">Open</a>
                    </div>
                </div>

                <div class="text-xs text-gray-500">Need a different style? I can convert this to a Vue/React partial or
                    to your existing Tailwind component.</div>
            </aside>
        </main>

        <footer class="mt-12 text-center text-sm text-gray-600/70">© <span id="year">2025</span> Premier League — All
            rights reserved</footer>
    </div>

    <script>
        // small script to set year and keyboard focus
        document.getElementById('year').textContent = new Date().getFullYear();
        // keyboard accessible focus when landed direct on page
        window.addEventListener('DOMContentLoaded', function ()
        {
            const back = document.querySelector('a[href^="javascript:history.back"]');
            if (back) back.setAttribute('role', 'button');
        });
    </script>
</body>

</html>